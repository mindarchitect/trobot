                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>-->

        <!-- Function Buttons -->
        <StackPanel Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Style="{StaticResource CommandButtonPanel}" >
            <!-- Add destination point button -->
            <Button Style="{StaticResource Button}" Command="{Binding Path=AddDestinationPoint}">
                Add destination point
                <Button.ToolTip>
                    <TextBlock>Add destination point</TextBlock>
                </Button.ToolTip>
            </Button>            
        </StackPanel>
    </Grid>    
</Window>
