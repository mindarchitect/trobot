            <DataGrid.Columns>
                <DataGridTextColumn Header="Step" Binding="{Binding CompanyName}"></DataGridTextColumn>
                <DataGridTextColumn Header="X" Binding="{Binding FirstName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Y" Binding="{Binding LastName}"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border BorderThickness="0" Background="BlanchedAlmond" Padding="10">
                        <StackPanel Orientation="Vertical">
